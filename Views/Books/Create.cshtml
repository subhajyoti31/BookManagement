@model BookManagement.Models.Book

<form asp-action="Create" asp-area="Home" method="post">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Book Name:</label>
                <input asp-for="Name" type="text" class="form-control required" placeholder="Enter Book Name" tabindex="1">
            </div>
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-success">Create Book</button>
                    <a asp-action="Index" asp-controller="Books" class="btn btn-secondary">Cancel</a>
                </center>
            </div>
        </div>
    </div>
</form>